{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      //add paths line
      "@components/*": [
        "./components/*"
      ],
      "@css/*": [
        "./css/*"
      ],
      "@routes/*": [
        "./routes/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@supabase/*": [
        "./supabase/*"
      ],
      "@dashboard/*": [
        "./dashboard/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "components",
    "routes",
    "css",
    "lib",
    "supabase",
    "dashboard"
  ]
}